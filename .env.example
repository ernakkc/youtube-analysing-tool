# YouTube Data API v3
# Single key (backward compatible)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Multiple keys for auto-rotation (optional)
# When one key's quota is exhausted, system will automatically switch to next
YOUTUBE_API_KEY_1=your_first_api_key_here
YOUTUBE_API_KEY_2=your_second_api_key_here
YOUTUBE_API_KEY_3=your_third_api_key_here
# Add more keys as needed (YOUTUBE_API_KEY_4, YOUTUBE_API_KEY_5, etc.)

# Database
DB_PATH=./data/channels.json

# Filters
MIN_SUBSCRIBERS=10000
MAX_SUBSCRIBERS=500000
MAX_DAYS_SINCE_UPLOAD=30
MIN_VIDEO_DURATION_MINUTES=3
MIN_VIDEO_VIEWS=1000
SHORTS_THRESHOLD_PERCENTAGE=60

# Discovery
DEFAULT_REGION_CODE=TR
DEFAULT_LANGUAGE=tr
MAX_RESULTS_PER_QUERY=50
